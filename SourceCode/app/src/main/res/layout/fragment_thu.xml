<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nhatlam.nhomnm_quanlychitieu.Fragments.Catagory.ThuFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@android:color/transparent"
        android:weightSum="1"
        android:visibility="gone"
        android:id="@+id/layoutAddThu">

        <EditText
            android:layout_width="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtThuName"
            android:hint="Tên Khoản thu"
            android:background="@color/blue1"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnAddNewThu"
            android:scaleType="fitStart"
            android:layout_marginStart="10dp"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:background="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_action_accept" />
        <Button
            android:id="@+id/btnCancelThu"
            android:layout_weight="1"
            android:background="@android:color/holo_red_dark"
            android:drawableLeft="@drawable/ic_action_cancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ThuEditBox"
        android:layout_margin="15dp"
        android:background="#fffb80"
        android:visibility="gone">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editnameThu"
            android:background="@color/blue1"
            android:paddingStart="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textSize="24sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="Thay đổi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnEditThu"
                android:layout_weight="1"
                android:background="@android:color/holo_green_light"
                android:drawableLeft="@drawable/ic_action_accept"
                android:textSize="12sp" />

            <Button
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnCancelEditThu"
                android:layout_weight="1"
                android:textSize="12sp"
                android:background="#ff0000"
                android:drawableLeft="@drawable/ic_action_cancel" />

            <Button
                android:text="Xóa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnDeleteThu"
                android:layout_weight="1"
                android:textSize="12sp"
                android:background="@android:color/holo_orange_dark"
                android:drawableLeft="@drawable/ic_action_discard" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/layoutbtnAddThu">

        <Button
            android:text="Thêm mới mục khoản thu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btnShowContainThu"
            android:layout_weight="1"
            android:drawableLeft="@android:drawable/ic_menu_add"
            android:background="@android:color/holo_blue_dark"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:paddingStart="2dp"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lstKhoanThu">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>
