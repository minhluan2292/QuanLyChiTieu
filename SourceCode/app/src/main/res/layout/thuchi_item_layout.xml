<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary">

    </View>
    <ImageView
        android:layout_height="96dp"
        android:id="@+id/imgThuChi"
        android:layout_width="96dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCataGiaoDich"
        android:layout_toRightOf="@+id/imgThuChi"
        android:textSize="20sp"
        android:paddingStart="20dp"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNgayGiaoDich"
        android:layout_toRightOf="@+id/imgThuChi"
        android:layout_toEndOf="@+id/imgThuChi"
        android:layout_below="@+id/txtCataGiaoDich"
        android:textSize="20sp"
        android:paddingStart="20dp"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/txtSoTienChi"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp"
        android:layout_alignParentTop="false"
        android:layout_toRightOf="@+id/imgThuChi"
        android:layout_below="@+id/txtNgayGiaoDich"
        android:paddingStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textStyle="normal|bold"
        android:layout_alignParentBottom="false" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/txtSoTienThu"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:layout_toRightOf="@+id/imgThuChi"
        android:layout_below="@+id/txtNgayGiaoDich"
        android:paddingStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="false" />



</RelativeLayout>